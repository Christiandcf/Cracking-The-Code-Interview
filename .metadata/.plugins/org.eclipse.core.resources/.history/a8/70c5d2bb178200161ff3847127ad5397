public class linkedList {
	
	public static void main(String[] args){
		Node node = new Node(5);
		
		node.appendToTail(4);
		
		node.display();
	}
	
	public static class Node {
		Node next = null;
		int data;

		public Node(int d) {
			data = d;
		}

		public void appendToTail(int d) {
			Node end = new Node(d);
			Node n = this;
			while (n.next != null) {
				n = n.next;
			}
			n.next = end;
		}
		
		public static Node deleteNode(Node head, int d){
			Node n = head;
			
			if(n.data == d){
				return head.next; //moved to head.
			}
			
			while (n.next != null){
				if(n.next.data == d){
					n.next = n.next.next;
					return head; //head didnt chanage
				}
			}
			
			return head;
		}
		
		public void display(){
			Node n = this;
			
			while (n != null){
				//n.display();
				
				System.out.println("Next Link: " + n.next);
				
				n = n.next;
				
				System.out.println();
			}
		}
	}
	
	
}
